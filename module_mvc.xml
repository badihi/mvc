<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mvc" default="compile.module.mvc">
  <dirname property="module.mvc.basedir" file="${ant.file.module_mvc}"/>
  
  
  <property name="compiler.args.mvc" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="mvc.output.dir" value="${module.mvc.basedir}/out/production/MVC"/>
  <property name="mvc.testoutput.dir" value="${module.mvc.basedir}/out/test/MVC"/>
  
  <path id="mvc.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mvc.module.production.classpath">
    <path refid="library.json-20180813.classpath"/>
    <path refid="library.junit-4.12.classpath"/>
    <path refid="library.hamcrest-all-1.3.classpath"/>
  </path>
  
  <path id="mvc.runtime.production.module.classpath">
    <pathelement location="${mvc.output.dir}"/>
    <path refid="library.json-20180813.classpath"/>
    <path refid="library.junit-4.12.classpath"/>
    <path refid="library.hamcrest-all-1.3.classpath"/>
  </path>
  
  <path id="mvc.module.classpath">
    <pathelement location="${mvc.output.dir}"/>
    <path refid="library.json-20180813.classpath"/>
    <path refid="library.junit-4.12.classpath"/>
    <path refid="library.hamcrest-all-1.3.classpath"/>
  </path>
  
  <path id="mvc.runtime.module.classpath">
    <pathelement location="${mvc.testoutput.dir}"/>
    <pathelement location="${mvc.output.dir}"/>
    <path refid="library.json-20180813.classpath"/>
    <path refid="library.junit-4.12.classpath"/>
    <path refid="library.hamcrest-all-1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mvc">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mvc">
    <patternset refid="excluded.from.module.mvc"/>
  </patternset>
  
  <path id="mvc.module.sourcepath">
    <dirset dir="${module.mvc.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="mvc.module.test.sourcepath">
    <dirset dir="${module.mvc.basedir}">
      <include name="tests"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mvc" depends="compile.module.mvc.production,compile.module.mvc.tests" description="Compile module MVC"/>
  
  <target name="compile.module.mvc.production" description="Compile module MVC; production classes">
    <mkdir dir="${mvc.output.dir}"/>
    <javac destdir="${mvc.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.mvc}"/>
      <bootclasspath refid="mvc.module.bootclasspath"/>
      <classpath refid="mvc.module.production.classpath"/>
      <src refid="mvc.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mvc"/>
    </javac>
    
    <copy todir="${mvc.output.dir}">
      <fileset dir="${module.mvc.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mvc.tests" depends="compile.module.mvc.production" description="compile module MVC; test classes" unless="skip.tests">
    <mkdir dir="${mvc.testoutput.dir}"/>
    <javac destdir="${mvc.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.mvc}"/>
      <bootclasspath refid="mvc.module.bootclasspath"/>
      <classpath refid="mvc.module.classpath"/>
      <src refid="mvc.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.mvc"/>
    </javac>
    
    <copy todir="${mvc.testoutput.dir}">
      <fileset dir="${module.mvc.basedir}/tests">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.mvc" description="cleanup module">
    <delete dir="${mvc.output.dir}"/>
    <delete dir="${mvc.testoutput.dir}"/>
  </target>
</project>